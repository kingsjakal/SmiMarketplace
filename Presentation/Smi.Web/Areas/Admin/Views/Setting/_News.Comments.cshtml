@model NewsSettingsModel

<div class="panel-body">
    <div class="form-group">
        <div class="col-md-3">
            <Smi-override-store-checkbox asp-for="AllowNotRegisteredUsersToLeaveComments_OverrideForStore" asp-input="AllowNotRegisteredUsersToLeaveComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <Smi-label asp-for="AllowNotRegisteredUsersToLeaveComments" />
        </div>
        <div class="col-md-9">
            <Smi-editor asp-for="AllowNotRegisteredUsersToLeaveComments" />
            <span asp-validation-for="AllowNotRegisteredUsersToLeaveComments"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <Smi-override-store-checkbox asp-for="NewsCommentsMustBeApproved_OverrideForStore" asp-input="NewsCommentsMustBeApproved" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <Smi-label asp-for="NewsCommentsMustBeApproved" />
        </div>
        <div class="col-md-9">
            <Smi-editor asp-for="NewsCommentsMustBeApproved" />
            <span asp-validation-for="NewsCommentsMustBeApproved"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <Smi-override-store-checkbox asp-for="NotifyAboutNewNewsComments_OverrideForStore" asp-input="NotifyAboutNewNewsComments" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
            <Smi-label asp-for="NotifyAboutNewNewsComments" />
        </div>
        <div class="col-md-9">
            <Smi-editor asp-for="NotifyAboutNewNewsComments" />
            <span asp-validation-for="NotifyAboutNewNewsComments"></span>
        </div>
    </div>
    <div class="form-group advanced-setting">
        <div class="col-md-3">
            <Smi-label asp-for="ShowNewsCommentsPerStore" />
        </div>
        <div class="col-md-9">
            <Smi-editor asp-for="ShowNewsCommentsPerStore" />
            <span asp-validation-for="ShowNewsCommentsPerStore"></span>
        </div>
    </div>
</div>