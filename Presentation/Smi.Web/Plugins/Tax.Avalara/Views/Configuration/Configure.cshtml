@model ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Avalara" asp-action="Configure" method="post">
    <div class="content">
        <div class="form-horizontal">
            <Smi-panels id="avalara-panels">
                <Smi-panel asp-name="configuration" asp-icon="fa fa-info" asp-title="@T("Plugins.Tax.Avalara.Configuration")" asp-hide-block-attribute-name="@AvalaraTaxDefaults.HideGeneralBlock" asp-hide="@Model.HideGeneralBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Tax.Avalara/Views/Configuration/_Configuration.cshtml", Model)</Smi-panel>
                <Smi-panel asp-name="log" asp-icon="fa fa-list" asp-title="@T("Plugins.Tax.Avalara.Log")" asp-hide-block-attribute-name="@AvalaraTaxDefaults.HideLogBlock" asp-hide="@Model.HideLogBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Tax.Avalara/Views/Log/List.cshtml", Model)</Smi-panel>
            </Smi-panels>
        </div>
    </div>
</form>